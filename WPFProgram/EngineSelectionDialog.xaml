<Window x:Class="StarSaviorAssistant.EngineSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="검색 엔진 선택" Height="600" Width="900"
        WindowStyle="None" ResizeMode="NoResize" 
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <ScrollContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource CardBackground}" CornerRadius="15" BorderBrush="{DynamicResource MainBorder}" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="🔍 검색 엔진 선택" 
                           Foreground="{DynamicResource MainForeground}" FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="사용할 기본 검색 엔진을 선택해주세요."
                           Foreground="{DynamicResource SubText}" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <ListView x:Name="EngineList" Grid.Row="1" 
                      Background="Transparent" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="Bd" 
                                            Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="15"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource MainBorder}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border x:Name="ActiveBar" Width="5" HorizontalAlignment="Left" 
                                                    Background="{DynamicResource PrimaryColor}" CornerRadius="2" 
                                                    Visibility="Collapsed" Margin="-15,-15,15,-15"/>

                                            <ContentPresenter Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource MainBorder}"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource MainBorder}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource MainBorder}"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                            <Setter TargetName="ActiveBar" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{DynamicResource MainForeground}" FontWeight="Bold" FontSize="18" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>

                                <Border Background="#1B5E20" CornerRadius="4" Padding="6,2" Margin="0,0,5,0"
                                        Visibility="{Binding IsRecommend, Converter={StaticResource BoolToVis}}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="추천" Foreground="#81C784" FontSize="11" FontWeight="Bold"/>
                                </Border>

                                <Border Background="#BF360C" CornerRadius="4" Padding="6,2"
                                        Visibility="{Binding IsExperimental, Converter={StaticResource BoolToVis}}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="실험적" Foreground="#FFAB91" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                       Foreground="{DynamicResource SubText}" FontSize="13" 
                                       TextWrapping="Wrap" LineHeight="20"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="취소" Width="100" Height="40" Margin="0,0,10,0" 
                    Click="Cancel_Click" 
                    Background="{DynamicResource MainBorder}" Foreground="{DynamicResource MainForeground}" BorderThickness="0" FontSize="14">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="확인" Width="100" Height="40" 
                        Click="Select_Click" 
                        Background="{DynamicResource PrimaryColor}" Foreground="White" FontWeight="Bold" BorderThickness="0" FontSize="14">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>