<Window x:Class="StarSaviorAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarSaviorAssistant"
        mc:Ignorable="d"
        Title="StarSavior 이벤트 화면 인식기 (v0.2-beta)" 
        Width="400"
        SizeToContent="Height"
        Background="Transparent" 
        WindowStyle="None" ResizeMode="NoResize" 
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <local:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibility"/>

        <Style x:Key="OutcomeLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="OutcomeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="OutcomeRowPanelStyle" TargetType="DockPanel">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="LastChildFill" Value="True"/>
        </Style>
    </Window.Resources>
    <Border Background="{DynamicResource CardBackground}" CornerRadius="15" BorderBrush="{DynamicResource MainBorder}" BorderThickness="1">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="TxtTitle" 
                       Grid.Row="0"
                       Text="StarSavior 어시스던트" 
                       Foreground="{DynamicResource MainForeground}" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,0,8"
                       DockPanel.Dock="Left"/>
            <Button Grid.Row="0"
                Content="✕"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="30" Height="30"
                Margin="0,-5,-5,0"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{DynamicResource MainForeground}"
                FontSize="14"
                FontWeight="Bold"
                Cursor="Hand"
                Click="CloseButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <DockPanel Grid.Row="1" Margin="0,0,0,15" LastChildFill="False">
                <TextBlock x:Name="TxtStatus" 
                       Text="화면인식 대기" 
                       Foreground="{DynamicResource PrimaryColor}" 
                       FontSize="13" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <CheckBox Content="자동 갱신" 
                          IsChecked="False" 
                          VerticalAlignment="Center" 
                          Margin="0,0,15,0"
                          Checked="AutoRefresh_Checked" 
                          Unchecked="AutoRefresh_Unchecked"/>

                    <Button x:Name="BtnManualRefresh" 
                        Content="수동 갱신" 
                        Padding="12,6"
                        Click="ManualRefresh_Click"/>

                    <Button Content="⚙ 설정" 
                        Padding="12,6"
                        Click="Settings_Click"/>
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                    Width="48" Height="90"
                    CornerRadius="8"
                    Background="{DynamicResource CardBackground}" 
                    BorderBrush="{DynamicResource MainBorder}" 
                    BorderThickness="1"
                    Margin="0,0,15,0">
                    <Image x:Name="CardImage" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                        <Image.ToolTip>
                            <TextBlock Text="인식된 대상 이미지"/>
                        </Image.ToolTip>
                    </Image>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtEventType"
                           Text="이벤트 종류 텍스트" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource MainForeground}"
                           Margin="0,0,0,6"/>

                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="TxtTargetName"
                               Text="이벤트 타겟 이름" 
                               FontSize="18"
                               Foreground="{DynamicResource MainForeground}" 
                               Margin="0,0,0,2"/>
                        <TextBlock x:Name="TxtEventName"
                               Text="이벤트 이름" 
                               FontSize="16"
                               Foreground="{DynamicResource MainForeground}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <ListBox Grid.Row="3" 
                 x:Name="ChoicesListBox" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Padding="0">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource CardBackground}" 
                            CornerRadius="10" 
                            BorderThickness="1" 
                            BorderBrush="{DynamicResource MainBorder}"
                            Padding="15">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" 
                                       FontSize="17" 
                                       FontWeight="Bold" 
                                       Foreground="{DynamicResource MainForeground}" 
                                       Margin="0,0,0,12" 
                                       TextWrapping="Wrap"/>

                                <DockPanel ToolTipService.InitialShowDelay="100" Style="{DynamicResource OutcomeRowPanelStyle}"
                                       Visibility="{Binding FixedOutcome, Converter={StaticResource StringNotEmptyToVisibility}}">
                                    <TextBlock FontSize="15" Text="[고정]" Style="{DynamicResource OutcomeLabelStyle}" Foreground="{DynamicResource SubText}"/>
                                    <TextBlock FontSize="15" local:TextPotentialsInlineHelper.BoundText="{Binding FixedOutcome}" Style="{DynamicResource OutcomeTextStyle}" Foreground="{DynamicResource MainForeground}"/>
                                </DockPanel>

                                <DockPanel ToolTipService.InitialShowDelay="100" Style="{DynamicResource OutcomeRowPanelStyle}"
                                       Visibility="{Binding SuccessOutcome, Converter={StaticResource StringNotEmptyToVisibility}}">
                                    <TextBlock FontSize="15" Text="[성공]" Style="{DynamicResource OutcomeLabelStyle}" Foreground="{DynamicResource SuccessGreen}"/>
                                    <TextBlock FontSize="15" local:TextPotentialsInlineHelper.BoundText="{Binding SuccessOutcome}" Style="{DynamicResource OutcomeTextStyle}" Foreground="{DynamicResource MainForeground}"/>
                                </DockPanel>

                                <DockPanel ToolTipService.InitialShowDelay="100" Style="{DynamicResource OutcomeRowPanelStyle}"
                                       Visibility="{Binding FailureOutcome, Converter={StaticResource StringNotEmptyToVisibility}}">
                                    <TextBlock FontSize="15" Text="[실패]" Style="{DynamicResource OutcomeLabelStyle}" Foreground="{DynamicResource FailureRed}"/>
                                    <TextBlock FontSize="15" local:TextPotentialsInlineHelper.BoundText="{Binding FailureOutcome}" Style="{DynamicResource OutcomeTextStyle}" Foreground="{DynamicResource MainForeground}"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>